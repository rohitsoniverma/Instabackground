<resources>

    <style name="Theme.Instabackground" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_instabackground</item>
        <item name="popupMenuStyle">@style/PopupMenu.Instabackground</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Instabackground</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Instabackground</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Instabackground</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Instabackground</item>
        <item name="actionModeBackground">@drawable/cab_background_top_instabackground</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_instabackground</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Instabackground</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Instabackground.Widget</item>
    </style>

    <style name="ActionBar.Solid.Instabackground" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_instabackground</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_instabackground</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_instabackground</item>
        <item name="progressBarStyle">@style/ProgressBar.Instabackground</item>
    </style>

    <style name="ActionBar.Transparent.Instabackground" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_instabackground</item>
        <item name="progressBarStyle">@style/ProgressBar.Instabackground</item>
    </style>

    <style name="PopupMenu.Instabackground" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_instabackground</item>
    </style>

    <style name="DropDownListView.Instabackground" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_instabackground</item>
    </style>

    <style name="ActionBarTabStyle.Instabackground" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_instabackground</item>
    </style>

    <style name="DropDownNav.Instabackground" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_instabackground</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_instabackground</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_instabackground</item>
    </style>

    <style name="ProgressBar.Instabackground" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_instabackground</item>
    </style>

    <style name="ActionButton.CloseMode.Instabackground" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_instabackground</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Instabackground.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Instabackground</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Instabackground</item>
    </style>

</resources>