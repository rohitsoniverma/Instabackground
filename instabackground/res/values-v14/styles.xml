<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Instabackground" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_instabackground</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Instabackground</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Instabackground</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Instabackground</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Instabackground</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Instabackground</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_instabackground</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_instabackground</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Instabackground</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Instabackground.Widget</item>
    </style>

    <style name="ActionBar.Solid.Instabackground" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_instabackground</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_instabackground</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_instabackground</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Instabackground</item>
    </style>

    <style name="ActionBar.Transparent.Instabackground" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_instabackground</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Instabackground</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Instabackground.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Instabackground</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Instabackground</item>
    </style>

</resources>